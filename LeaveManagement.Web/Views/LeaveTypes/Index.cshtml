@model IEnumerable<LeaveTypeVM>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row  d-flex justify-content-center">
        <div class="col-10">
            <div class="row">
                <div class="col-3"><h3>Leave Types</h3></div>
                <div class="col-7 pt-1"><p> - Create and manage leave types according to your oraganization</p></div>
                <div class="col-2"><a asp-action="Create" class="btn btn-primary float-end "><i class="fa-solid fa-plus"></i> Create</a></div>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 pt-4">
                        <div class="card shadow-lg">
                            <div class="card-header text-center ">
                                <!--<p>@Html.DisplayNameFor(model => model.Name)</p>-->
                                <h5> @Html.DisplayFor(modelItem => item.Name)</h5>
                            </div>
                            <div class="card-body pt-1 text-center ">
                                <h4 class="text-danger">@Html.DisplayFor(modelItem => item.DefaultDays)</h4>
                                @Html.DisplayNameFor(model => model.DefaultDays)
                                <hr/>
                                <a asp-action="Edit" class="btn btn-white" asp-route-id="@item.Id"><i class="fa-regular fa-pen-to-square"></i></a>
                                <a asp-action="Details" class="btn btn-white text-dark" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i></a>
                                    <!--<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>-->
                                <button data-id="@item.Id" class="btn btn-white text-dark deleteBtn" type="button"><i class="fa-regular fa-trash-can"></i></button>
                            </div>
                        </div>
                    </div>
                }
             </div>
            <br />
            <hr />
            <br />
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DefaultDays)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DefaultDays)
                            </td>
                            <td>
                                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id"><i class="fa-regular fa-pen-to-square"></i></a>
                                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i></a>
                                <button data-id="@item.Id" class="btn btn-danger deleteBtn" type="button"><i class="fa-regular fa-trash-can"></i></button>
                                <form id="deleteFrom" asp-action="Delete">
                                    <input type="hidden" id="leaveTypeId" name="Id">
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
@section Scripts{
    <script>
        $(function(){
            $('.table').DataTable();
            $('.deleteBtn').click(function(e){
                swal({
                    title:"Confirm for Deletion",
                    text: "Are you sure you want to delete this record?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                   
                }).then((confirm) =>{
                    if(confirm){
                        var btn = $(this);
                        var id = btn.data("id");
                        $('#leaveTypeId').val(id);
                        $('#deleteFrom').submit();
                    }
                });
            });
        });
    </script>
}